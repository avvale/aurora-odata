{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "./../src/",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "@aurora/(.*)": "<rootDir>/../src/@aurora/$1",
        "@app/(.*)": "<rootDir>/../src/@app/$1",
        "@api/(.*)": "<rootDir>/../src/@api/$1"
    }
}